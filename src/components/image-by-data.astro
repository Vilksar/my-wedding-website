---

// Import the Astro scripts.
import { Image } from "astro:assets";

/**
 * Represents the properties.
 */
interface Properties {

    /**
     * The data.
     */
    data: ImageMetadata;

    /**
     * The alternate text.
     */
    alternateText: string;

}

// Get the properties.
const { data, alternateText, ...attributes } = Astro.props as Properties;

---

<Image {...attributes} src={data} alt={alternateText} widths={[1024, data.width]} sizes={`(max-width: 1024px) 1024px, ${data.width}px`} data-component="image-by-data" />
