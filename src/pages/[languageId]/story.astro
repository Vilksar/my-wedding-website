---

// Import the project scripts.
import { getImage, getLanguage, getLanguages, getTranslation } from "../../scripts/build";

// Import the project layout.
import type { Properties } from "../../layouts/layout.astro";
import Layout from "../../layouts/layout.astro";

// Import the project components.
import ImageByData from "../../components/image-by-data.astro";

/**
 * Defines the static paths.
 * @returns The static paths.
 */
export async function getStaticPaths() {
    // Return the static paths.
    return getLanguages().map(language => ({ params: { languageId: language.id } }));
}

/**
 * Represents the parameters.
 */
export type Parameters = {

    /**
     * The language ID.
     */
    languageId: string;

};

// Get the parameters.
const parameters = Astro.params as Parameters;

// Get the current language.
const currentLanguage = getLanguage(parameters.languageId);

// Get the properties.
const properties: Properties = {
    pageId: "story",
    languageId: currentLanguage.id,
    languageDirection: currentLanguage.direction,
} as const;

---

<Layout {...properties}>
    <Fragment slot="content-image">
        <ImageByData class:list="object-cover w-full h-full" data={getImage("cover-story")} alternateText="" />
    </Fragment>
    <Fragment slot="content-text">
        <div class="w-full mt-6 mb-6 text-center">
            <span class="text-5xl font-family-cursive font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/story/title")}</span>
        </div>
        <div class="w-full mt-6 mb-4 text-center">
            <span class="text-base font-family-serif font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/story/firstMeet")}</span>
        </div>
        <div class="w-full mt-4 mb-4 text-center">
            <span class="text-base font-family-serif font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/story/lifeTogether")}</span>
        </div>
        <div class="w-full mt-4 mb-6 text-center">
            <span class="text-base font-family-serif font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/story/readyForWedding")}</span>
        </div>
    </Fragment>
</Layout>
