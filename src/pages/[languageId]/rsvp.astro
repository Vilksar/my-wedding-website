---

// Import the project scripts.
import { getImage, getLanguage, getLanguages, getTranslation } from "../../scripts/build";

// Import the project layout.
import type { Properties } from "../../layouts/layout.astro";
import Layout from "../../layouts/layout.astro";

// Import the project components.
import ImageByData from "../../components/image-by-data.astro";

/**
 * Defines the static paths.
 * @returns The static paths.
 */
export async function getStaticPaths() {
    // Return the static paths.
    return getLanguages().map(language => ({ params: { languageId: language.id } }));
}

/**
 * Represents the parameters.
 */
export type Parameters = {

    /**
     * The language ID.
     */
    languageId: string;

};

// Get the parameters.
const parameters = Astro.params as Parameters;

// Get the current language.
const currentLanguage = getLanguage(parameters.languageId);

// Get the properties.
const properties: Properties = {
    title: getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/title"),
    languageId: currentLanguage.id,
    languageDirection: currentLanguage.direction,
} as const;

---

<Layout {...properties}>
    <Fragment slot="content-image">
        <div class="relative z-0 w-full h-full">
            <!-- <ImageByData class:list="object-cover w-full h-full" data={getImage("rsvp")} alternateText={getTranslation(currentLanguage.id, "assets/images/rsvp")} /> -->
            <div class="object-cover w-full h-full bg-gradient-to-br light:from-slate-200 light:to-slate-500 dark:from-slate-500 dark:to-slate-800" />
        </div>
    </Fragment>
    <Fragment slot="content-text">
        <div class="absolute top-0 right-0 z-0 flex flex-row m-0 p-0">
            <ImageByData data={getImage("detail-top")} alternateText="" />
        </div>
        <div class="absolute bottom-0 left-0 z-0 flex flex-row m-0 p-0">
            <ImageByData data={getImage("detail-bottom")} alternateText="" />
        </div>
        <div class="relative z-10 flex-auto flex flex-col justify-center items-center h-full w-full px-2">
            <div class="w-full max-w-96 m-5 p-5 rounded border light:border-slate-200 light:bg-slate-100/50 dark:border-slate-800 dark:bg-slate-900/50">
                <div class="flex flex-col justify-center items-center w-full pt-4 pb-4 text-center">
                    <div class="w-full mx-1 my-1">
                        <span class="text-5xl font-cursive">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/title")}</span>
                    </div>
                </div>
                <div class="flex flex-col justify-center items-center w-full pt-4 pb-4 text-center">
                    <div class="w-full mx-1 my-1">
                        <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/text/message")}</span>
                    </div>
                </div>
                <div class="flex flex-col justify-center items-center w-full pt-2 pb-4 text-center">
                    <form class="group/form flex flex-col justify-center items-center w-full" action="" method="post" data-component="form" data-form-is-submitted="unknown">
                        <div class="hidden group-data-[form-is-submitted=true]/form:flex flex-col justify-center items-center w-full my-2" data-component="form-result-success">
                            <div class="w-full mx-1 my-0">
                                <div class="flex flex-col justify-center items-center w-full my-2 px-2 py-1 border rounded light:border-green-700 light:bg-green-200 light:text-green-700 dark:border-green-300 dark:bg-green-800 dark:text-green-300">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/result/success")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="hidden group-data-[form-is-submitted=false]/form:flex flex-col justify-center items-center w-full my-2" data-component="form-result-error">
                            <div class="w-full mx-1 my-0">
                                <div class="flex flex-col justify-center items-center w-full my-2 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/result/error")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="group/form-entry flex flex-col justify-center items-center w-full my-2" data-component="form-entry" data-form-entry-is-valid="unknown">
                            <div class="w-full mx-1 my-0" data-form-entry="label">
                                <label for="full-name" class="flex flex-row justify-center items-center">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/fullName/name")}</span>
                                    <span class="text-base font-normal mx-1">&middot;</span>
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/fullName/isRequired?")}</span>
                                </label>
                                <div class="flex flex-row justify-center items-center">
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/fullName/description")}</span>
                                </div>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="input">
                                <input type="text" id="full-name" class="w-full text-center rounded-md py-1.5 px-2 border outline-2 light:border-slate-300 light:bg-slate-50 light:outline-slate-500 light:hover:border-slate-500 dark:border-slate-700 dark:bg-slate-950 dark:outline-slate-500 dark:hover:border-slate-500" />
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="error">
                                <div class="hidden group-data-[form-entry-is-valid=false]/form-entry:flex flex-col justify-center items-center w-full mt-1 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/fullName/error")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="group/form-entry flex flex-col justify-center items-center w-full my-2" data-component="form-entry" data-form-entry-is-invalid="unknown">
                            <div class="w-full mx-1 my-0" data-form-entry="label">
                                <label for="attendance-status" class="flex flex-row justify-center items-center">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/name")}</span>
                                    <span class="text-base font-normal mx-1">&middot;</span>
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/isRequired?")}</span>
                                </label>
                                <div class="flex flex-row justify-center items-center">
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/description")}</span>
                                </div>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="input">
                                <select id="attendance-status" class="w-full text-center rounded-md py-1.5 px-2 border outline-2 light:border-slate-300 light:bg-slate-50 light:outline-slate-500 light:hover:border-slate-500 dark:border-slate-700 dark:bg-slate-950 dark:outline-slate-500 dark:hover:border-slate-500">
                                    <option value="-">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/option/-")}</option>
                                    <option value="no">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/option/no")}</option>
                                    <option value="yes">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/option/yes")}</option>
                                </select>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="error">
                                <div class="hidden group-data-[form-entry-is-valid=false]/form-entry:flex flex-col justify-center items-center w-full mt-1 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/attendanceStatus/error")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="group/form-entry flex flex-col justify-center items-center w-full my-2" data-component="form-entry" data-form-entry-is-invalid="unknown">
                            <div class="w-full mx-1 my-0" data-form-entry="label">
                                <label for="menu-option" class="flex flex-row justify-center items-center">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/name")}</span>
                                    <span class="text-base font-normal mx-1">&middot;</span>
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/isRequired?")}</span>
                                </label>
                                <div class="flex flex-row justify-center items-center">
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/description")}</span>
                                </div>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="input">
                                <select id="menu-option" class="w-full text-center rounded-md py-1.5 px-2 border outline-2 light:border-slate-300 light:bg-slate-50 light:outline-slate-500 light:hover:border-slate-500 dark:border-slate-700 dark:bg-slate-950 dark:outline-slate-500 dark:hover:border-slate-500">
                                    <option value="-">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/option/-")}</option>
                                    <option value="regular">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/option/regular")}</option>
                                    <option value="vegetarian">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/option/vegetarian")}</option>
                                    <option value="vegan">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/option/vegan")}</option>
                                </select>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="error">
                                <div class="hidden group-data-[form-entry-is-valid=false]/form-entry:flex flex-col justify-center items-center w-full mt-1 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuOption/error")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="group/form-entry flex flex-col justify-center items-center w-full my-2" data-component="form-entry" data-form-entry-is-invalid="unknown">
                            <div class="w-full mx-1 my-0" data-form-entry="label">
                                <label for="menu-restrictions" class="flex flex-row justify-center items-center">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuRestrictions/name")}</span>
                                    <span class="text-base font-normal mx-1">&middot;</span>
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuRestrictions/isRequired?")}</span>
                                </label>
                                <div class="flex flex-row justify-center items-center">
                                    <span class="text-xs font-light">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuRestrictions/description")}</span>
                                </div>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="input">
                                <input type="text" id="menu-restrictions" class="w-full text-center rounded-md py-1.5 px-2 border outline-2 light:border-slate-300 light:bg-slate-50 light:outline-slate-500 light:hover:border-slate-500 dark:border-slate-700 dark:bg-slate-950 dark:outline-slate-500 dark:hover:border-slate-500" />
                            </div>
                            <div class="w-full mx-1 my-0" data-form-entry="error">
                                <div class="hidden group-data-[form-entry-is-valid=false]/form-entry:flex flex-col justify-center items-center w-full mt-1 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/entry/menuRestrictions/error")}</span>
                                </div>
                            </div>
                        </div>
                        <div class="group/form-submit flex flex-col justify-center items-center w-full my-2" data-component="form-submit" data-form-submit-is-valid="unknown">
                            <div class="w-full mx-1 my-0" data-form-submit="button">
                                <button type="submit" class="flex flex-row justify-center items-center w-full p-2 border rounded light:border-slate-900 light:bg-slate-100 light:text-slate-900 light:hover:border-slate-900 light:hover:bg-slate-200 light:hover:text-slate-900 light:disabled:border-slate-400 light:disabled:bg-slate-200 light:disabled:text-slate-400 dark:border-slate-100 dark:bg-slate-900 dark:text-slate-100 dark:hover:border-slate-100 dark:hover:bg-slate-800 dark:hover:text-slate-100 dark:disabled:border-slate-600 dark:disabled:bg-slate-800 dark:disabled:text-slate-600" disabled="disabled">
                                    <span class="text-base font-semibold">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/submit/name")}</span>
                                </button>
                            </div>
                            <div class="w-full mx-1 my-0" data-form-submit="error">
                                <div class="hidden group-data-[form-submit-is-valid=false]/form-submit:flex flex-col justify-center items-center w-full mt-1 px-2 py-1 border rounded light:border-red-700 light:bg-red-200 light:text-red-700 dark:border-red-300 dark:bg-red-800 dark:text-red-300">
                                    <span class="text-base font-normal">{getTranslation(currentLanguage.id, "pages/[languageId]/rsvp/form/submit/error")}</span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </Fragment>
</Layout>
